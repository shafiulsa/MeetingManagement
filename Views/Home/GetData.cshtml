@{
    ViewData["Title"] = "Meeting Minutes";
}

<div class="container mt-4">
    <h4 class="mb-3">Meeting Minutes</h4>

    <!-- Customer Type -->
    <div class="mb-3">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="customerType" id="corporate" checked />
            <label class="form-check-label" for="corporate">Corporate</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="customerType" id="individual" />
            <label class="form-check-label" for="individual">Individual</label>
        </div>
    </div>

    <!-- Form Section -->
    <form>
        <div class="row">
            <!-- Left Column -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Customer Name *</label>
                    <select class="form-select" id="customerDropdown">
                        <option selected disabled>Select customer name</option>
                    </select>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label class="form-label">Date *</label>
                        <input type="date" class="form-control" />
                    </div>
                    <div class="col">
                        <label class="form-label">Time *</label>
                        <input type="time" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Meeting Place *</label>
                    <input type="text" class="form-control" placeholder="Meeting place" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Attends From Client Side *</label>
                    <textarea class="form-control" rows="2" placeholder="Client attendees"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Attends From Host Side *</label>
                    <textarea class="form-control" rows="2" placeholder="Host attendees"></textarea>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Meeting Agenda *</label>
                    <textarea class="form-control" placeholder="Meeting agenda"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Meeting Discussion *</label>
                    <textarea class="form-control" placeholder="Meeting discussion"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Meeting Decision *</label>
                    <textarea class="form-control" placeholder="Meeting decision"></textarea>
                </div>
            </div>
        </div>

        <hr />

        <!-- Product/Service Section -->
        <div class="row align-items-end">
            <div class="col-md-5">
                <label class="form-label">Interested Product/Service</label>
                <select class="form-select" id="productDropdown">
                    <option selected disabled>Select product/service interested</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Quantity</label>
                <input type="number" class="form-control" id="quantityInput" placeholder="Qty" min="1" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Unit</label>
                <input type="text" class="form-control" id="unit" readonly />
            </div>
            <div class="col-md-2">
                <button type="button" class="btn btn-primary mt-3" id="addRowBtn">+ Add</button>
            </div>
        </div>

        <!-- Table Section -->
        <div class="mt-4">
            <table class="table table-bordered" id="productTable">
                <thead class="table-light">
                    <tr>
                        <th>SL#</th>
                        <th>Product/Service</th>
                        <th>Quantity</th>
                        <th>Unit</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="6" class="text-center">No matching records found</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Action Buttons -->
        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-success">Save</button>
            <button type="reset" class="btn btn-secondary">Refresh</button>
        </div>
    </form>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="editId">
                    <div class="mb-3">
                        <label class="form-label">Product/Service</label>
                        <input type="text" class="form-control" id="editName" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Unit</label>
                        <input type="text" class="form-control" id="editUnit" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Quantity *</label>
                        <input type="number" class="form-control" id="editQuantity" min="1" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveEditBtn">Save Changes</button>
            </div>
        </div>
    </div>
</div>

